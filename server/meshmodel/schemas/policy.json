{
  "$id": "https://schema.meshery.io/policy.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "`Policies` define the genealogy between one or more `Components` interconnected `Components`.",
  "required": [
    "apiVersion",
    "kind",
    "subType",
    "model"
  ],
  "additionalProperties": false,
  "type": "object",
  "properties": {
    "apiVersion": {
      "type": "string",
      "description": "API Version of the Policy."
    },
    "metadata": {
      "type": "object",
      "description": "Metadata contains additional information associated with the Policy.",
      "properties": {
        "description": {
          "type": "string",
          "description": "Description of the Policy."
        },
        "name": {
          "$ref": "https://schema.meshery.io/core.json#inputString",
          "description": "Name of the Policy."
        },
        "version": {
          "$ref": "https://schema.meshery.io/core.json#versionString",
          "description": "Version of the Policy."
        }
      }
    },
    "kind": {
      "type": "string",
      "description": "Kind of the Policy. Eg: Network, Security, etc."
    },
    "expression": {
      "type": "string",
      "description": "Expression of the Policy."
    },
    "model": {
      "$ref": "https://schema.meshery.io/model.json",
      "description": "Model of the Policy."
    },
    "subType": {
      "type": "string",
      "description": "Used for further classification of Policy. Type and SubType together identifies a Policy."
    }
  }
}