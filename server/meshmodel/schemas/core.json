{
  "$id": "https://schema.meshery.io/core.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Reusable core schema elements",
  "definitions": {
    "inputString": {
      "type": "string",
      "pattern": "^[a-zA-Z_][a-zA-Z0-9_]*$"
    },
    "versionString":{
      "type": "string",
      "pattern": "^\\d+(\\.\\d+){0,2}(-(alpha|beta))?$"
    }
  }
}
