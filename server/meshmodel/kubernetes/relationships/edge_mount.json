{
  "apiVersion": "core.meshery.io/v1alpha1",
  "kind": "Edge",
  "metadata": {
    "description": "A relationship that represents volume mounts between components",
    "capabilities":{
      "designer": {
        "edit": {
          "style": true,
          "config": false,
          "label": false
        }
      }
    }},
  "model": {
    "name": "kubernetes",
    "version": "v1.25.2",
    "displayName": "Kubernetes",
    "category": {
      "name": "Orchestration \u0026 Management",
      "metadata": null
    },
    "metadata": {}
  },
  "subType": "Mount",
  "evaluationQuery": "edge_binding_relationship",
  "selectors": [{
    "deny": {
      "from": [
        {
          "kind": "Pod",
          "model": "kubernetes"
        }
      ],
      "to": [
        {
          "kind": "Pod",
          "model": "kubernetes"
        }
      ]
    },
    "allow": {
      "from": [
        {
          "kind": "Pod",
          "model": "kubernetes",
          "match": {
            "self": [
              [
                "settings",
                "spec",
                "volumes",
                "_",
                "persistentVolumeClaim",
                "claimName"
              ]
            ],
            "PersistentVolumeClaim": [
              [
                "name"
              ]
            ]
          }
        }
      ],
      "to": [
        {
          "kind": "PersistentVolume",
          "model": "kubernetes",
          "match": {
            "self": [
              [
                "name"
              ],
              [
                "labels"
              ]
            ],
            "PersistentVolumeClaim": [
              [
                "settings",
                "spec",
                "volumeName"
              ],
              [
                "settings",
                "spec",
                "selector",
                "matchLabels"
              ]
            ]
          }
        }
      ]
    }
  }]
}