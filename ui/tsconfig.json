{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "checkJs": false,
    "jsx": "react",                  // For React 17 JSX transform
    "strict": false,               
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/components/*": ["components/*"],
      "@/utils/*": ["utils/*"],
      "@/rtk-query/*": ["rtk-query/*"],
      "@/constants/*": ["constants/*"],
      "@/api/*": ["api/*"],
      "@/assets/*": ["assets/*"],
      "@/themes/*": ["themes/*"],
      "@/store/*": ["store/*"]
    },
    "outDir": "out"
  },
  "exclude": [
    "node_modules",
    "out"
  ],
  "include": [
    "**/*.js",
    "**/*.jsx",
    "**/*.ts",
    "**/*.tsx",
    "types"
  ]
}
